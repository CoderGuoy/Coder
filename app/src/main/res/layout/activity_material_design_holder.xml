<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/materialdesign_holder"
            layout="@layout/toolbar"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="StatusBar|透明状态栏"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TabLayout|横向布局标签"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextInputLayout|文字输入布局"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FloatingActionButton|悬浮按钮"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CoordinatorLayout|协调布局"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CoordinatorLayout.Behavior|自定义的协调布局"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CoordinatorToolbar|折叠头布局"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button_bsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BottomSheetDialog|底部对话框"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_feedfack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Touch Feedback|触摸反馈"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_reveal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reveal Effect|揭示效果"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_curved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curved Motion|曲线运动"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_viewstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View State Changes|视图状态改变"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</layout>
