<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/curvedmotion"
            layout="@layout/toolbar"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_curved_motion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开始"/>


                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/image_curved1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="01"/>

                    <TextView
                        android:id="@+id/image_curved2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="02"/>

                    <TextView
                        android:id="@+id/image_curved3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="03"/>

                    <TextView
                        android:id="@+id/image_curved4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="04"/>

                    <TextView
                        android:id="@+id/image_curved5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="05"/>

                    <TextView
                        android:id="@+id/image_curved6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="06"/>

                    <TextView
                        android:id="@+id/image_curved7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="07"/>

                    <TextView
                        android:id="@+id/image_curved8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="08"/>

                    <TextView
                        android:id="@+id/image_curved9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="09"/>

                    <TextView
                        android:id="@+id/image_curved10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="10"/>

                    <TextView
                        android:id="@+id/image_curved11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="11"/>

                    <TextView
                        android:id="@+id/image_curved12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="12"/>

                    <TextView
                        android:id="@+id/image_curved13"
                        android:layout_width="wrap_content"
