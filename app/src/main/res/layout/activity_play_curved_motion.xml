                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="13"/>

                    <TextView
                        android:id="@+id/image_curved14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="14"/>

                    <TextView
                        android:id="@+id/image_curved15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="15"/>

                    <TextView
                        android:id="@+id/image_curved16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:text="16"/>

                </LinearLayout>
                <!--图例-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:text="1.accelerate_cubic|加速度_立方体"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:text="2.accelerate_decelerate|加速度_减速"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:text="3.accelerate_quad|加速度_二次"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:text="4.accelerate_quint|加速度_五重峰"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:text="5.anticipate|开始向后,然后向前"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:text="6.anticipate_overshoot|开始向后，然后向前并超过目标值，最后返回最终值"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:text="7.bounce|到达目标值时有回弹效果并逐渐减小回弹力"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:text="8.cycle|重复动画一个周期"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:text="9.decelerate_cubic|减速度_立方"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:text="10.decelerate_quad|减速度_二次"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:text="11.decelerate_quint|减速度_五重峰"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:text="12.fast_out_linear_in|快速加速并持续加速到结束"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/red"
                        android:padding="2dp"
                        android:text="13.fast_out_slow_in|快速加速但缓慢减速到结束"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/green"
                        android:padding="2dp"
                        android:text="14.linear|速度恒定"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/blue"
                        android:padding="2dp"
                        android:text="15.linear_out_slow_in|甩向前超过最终值然后返回到最终值"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/yello"
                        android:padding="2dp"
                        android:text="16.overshoot"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>
